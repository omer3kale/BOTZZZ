# =====================================================
# BOTZZZ Enterprise Platform - Environment Configuration
# Supabase Integration Settings
# =====================================================

# ===== SUPABASE CONFIGURATION =====
# Your Supabase project URL (replace with your actual URL)
SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anonymous key (safe to use in client-side code)
SUPABASE_ANON_KEY=your-anon-key-here

# Your Supabase service role key (KEEP SECRET - server-side only)
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Database schema (usually 'public')
SUPABASE_SCHEMA=public

# ===== DATABASE CONFIGURATION =====
# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Query timeout settings (seconds)
DB_QUERY_TIMEOUT=30
DB_CONNECTION_TIMEOUT=10

# ===== REAL-TIME FEATURES =====
# Enable real-time subscriptions
REALTIME_ENABLED=true

# Real-time channel prefix
REALTIME_CHANNEL_PREFIX=botzzz_

# Maximum concurrent real-time connections
REALTIME_MAX_CONNECTIONS=1000

# ===== CACHING CONFIGURATION =====
# Redis configuration for caching (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL settings (seconds)
CACHE_DEFAULT_TTL=3600
CACHE_ANALYTICS_TTL=1800
CACHE_USER_SESSION_TTL=86400

# ===== SECURITY SETTINGS =====
# Flask secret key (generate a secure random key)
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# Password hashing settings
BCRYPT_ROUNDS=12

# ===== API RATE LIMITING =====
# Rate limiting settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=1000/hour
RATE_LIMIT_PREMIUM=10000/hour
RATE_LIMIT_ENTERPRISE=unlimited

# ===== LOGGING CONFIGURATION =====
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log retention (days)
LOG_RETENTION_DAYS=90

# Enable structured logging
STRUCTURED_LOGGING=true

# ===== MONITORING & ALERTING =====
# Enable system monitoring
MONITORING_ENABLED=true

# Prometheus metrics endpoint
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8000

# Alert thresholds
ERROR_RATE_THRESHOLD=0.05
RESPONSE_TIME_THRESHOLD=2000
MEMORY_USAGE_THRESHOLD=0.85

# ===== EMAIL NOTIFICATIONS =====
# SendGrid configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@botzzz.com
SENDGRID_FROM_NAME=BOTZZZ Platform

# Alert email settings
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_RECIPIENTS=admin@botzzz.com,ops@botzzz.com

# ===== FILE STORAGE =====
# Local storage settings
LOCAL_STORAGE_PATH=./storage
MAX_UPLOAD_SIZE=100MB

# AWS S3 settings (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=botzzz-storage
AWS_S3_REGION=us-east-1

# ===== ENTERPRISE FEATURES =====
# Multi-tenancy settings
MULTI_TENANT_ENABLED=true
DEFAULT_TENANT=botzzz

# White-label support
WHITE_LABEL_ENABLED=true
WHITE_LABEL_DOMAIN_VALIDATION=true

# Advanced analytics
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_FLUSH_INTERVAL=300

# ===== DEVELOPMENT SETTINGS =====
# Flask development settings
FLASK_ENV=production
FLASK_DEBUG=false

# Enable development features
DEV_MODE=false
DEV_TOOLBAR=false

# API documentation
API_DOCS_ENABLED=true
SWAGGER_UI_ENABLED=true

# ===== BACKUP & DISASTER RECOVERY =====
# Automated backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Disaster recovery settings
DR_ENABLED=true
DR_REPLICA_REGIONS=us-west-2,eu-west-1

# ===== PERFORMANCE OPTIMIZATION =====
# Connection pooling
CONNECTION_POOL_ENABLED=true
CONNECTION_POOL_SIZE=20

# Query optimization
QUERY_CACHE_ENABLED=true
QUERY_CACHE_SIZE=1000

# Compression
RESPONSE_COMPRESSION=true
STATIC_FILE_COMPRESSION=true

# ===== COMPLIANCE & SECURITY =====
# Data retention policies
DATA_RETENTION_ENABLED=true
USER_DATA_RETENTION_DAYS=2555  # 7 years
SYSTEM_LOG_RETENTION_DAYS=90

# Encryption settings
ENCRYPTION_ENABLED=true
ENCRYPTION_ALGORITHM=AES-256-GCM

# Audit logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555

# ===== INTEGRATIONS =====
# Third-party service integrations
CAPTCHA_SERVICE_ENABLED=true
PROXY_MANAGEMENT_ENABLED=true
AI_SERVICES_ENABLED=true

# Social media platform APIs
YOUTUBE_API_ENABLED=true
INSTAGRAM_API_ENABLED=true
TIKTOK_API_ENABLED=true
TWITTER_API_ENABLED=true

# ===== FEATURE FLAGS =====
# Enable/disable specific features
FEATURE_MARKETPLACE=true
FEATURE_AI_ENGINE=true
FEATURE_BUSINESS_INTELLIGENCE=true
FEATURE_ENTERPRISE_SECURITY=true
FEATURE_SOCIAL_ORCHESTRATOR=true
FEATURE_REVENUE_OPTIMIZATION=true

# Beta features
BETA_FEATURES_ENABLED=false
BETA_MULTI_CHANNEL_HUB=false
BETA_AB_TESTING_PLATFORM=false
BETA_API_GATEWAY=false
